{% extends 'base.html.twig' %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<div class="card-container">
		<h1 class="page-title">Toutes les recettes {{ category.name }}</h1>

		<div class="infos">
			<div class="info-group">
				<div>			
						{% for recipe in category.getRecipes() %}
							<h3>{{ recipe.name }}</h3>
								<a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="btn-back">
									<i class="ion-arrow-right-c"></i>Voir la recette</a>
							
							{# lien vers la recette #}
						{% endfor %}
				</div>
			</div>
		</div>
		<div class="actions">
			<a href="{{ path('app_category_index') }}" class="btn-back">
				<i class="ion-arrow-left-c"></i>Retourner à la liste des catégories
			</a>
			<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-action">
				<i class="ion-edit"></i>
				Modifier
			</a>
		</div>


	</div>
</div>{% endblock %}
