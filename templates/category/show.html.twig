{% extends 'base.html.twig' %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
<div class="recipe-detail">
	<h1 class="recipe-detail-title">{{ category.name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ category.name }}</td>
			</tr>
			<tr>
				<th>Recettes</th>
				{% for recipe in category.getRecipes() %}
					<td>{{ recipe.name }}</td>
				{% endfor %}

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">back to list</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}


    </div>
{% endblock %}

