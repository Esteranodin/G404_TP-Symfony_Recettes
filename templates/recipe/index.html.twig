{% extends 'base.html.twig' %}

{% block title %}Recipe index
{% endblock %}

{% block body %}
	<h1>Toutes nos recettes</h1>

	{# <h3> {{ category.name }}</h3> #}

	<section class="card">

		{% for recipe in recipes %}
			<h2 class="card_content">{{ recipe.name }}</h2>

			<img src="{{ asset('img/zganci.jpg') }}" alt="image du plat">

			<p>{{ recipe.description }}</p>
			{# <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td> #}
		</section>
		<section>
			<a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">
				Voir cette recette</a>
			<a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">Modifier cette recette</a>
		</section>

	{% endfor %}

	<section>
		<a href="{{ path('app_recipe_new') }}">Ajoutez votre recette</a>
	</section>
{% endblock %}
