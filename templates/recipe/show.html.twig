{% extends 'base.html.twig' %}

{% block title %}
	{{ recipe.name }}
{% endblock %}

{% block body %}
	<div class="card-container">
		<h1 class="page-title ">{{ recipe.name }}</h1>
		<h2 class="btn-back">{{ recipe.category}}</h2>

		<div class="infos">
			<div class="info-group">
				<i class="ion-clipboard"></i>
				<div>
					<h3>Description</h3>
					<p>{{ recipe.description }}</p>
				</div>
			</div>

			<div class="info-group">
				<i class="ion-ios-calendar"></i>
				<div>
					<h3>Date de création</h3>
					<p>{{ recipe.createdAt ? recipe.createdAt|date('d/m/Y à H:i') : '' }}</p>
				</div>
			</div>

			<div class="info-group">
				<i class="ion-link"></i>
				<div>
					<h3>Slug</h3>
					<p>{{ recipe.slug }}</p>
				</div>
			</div>
		</div>

		<div class="actions">
			<a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn-action">
				<i class="ion-edit"></i>
				Modifier
			</a>
			<a href="{{ path('app_recipe_index') }}" class="btn-back">
				<i class="ion-arrow-left-c"></i>
				Retour
			</a>
		</div>
	</div>
{% endblock %}
